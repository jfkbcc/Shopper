@using ShoppingLibrary.Models
@{
    ViewData["Title"] = "Modify a Product";
    Product product = (Product)ViewData["ProductData"];
}

<h4>Modify Product</h4>

<div class="w-50">
    <form method="post" enctype="application/x-www-form-urlencoded">
        <input type="hidden" name="productID" value="@product.ID" />

        <div class="row mb-3">
            <div class="col-md-12">
                <label>Product Name</label>
                <input type="text" name="name" class="form-control" maxlength="255" id="product-name" value="@product.Name" required>
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-md-12">
                <label>Product Image</label>
                <input type="text" name="image" class="form-control" maxlength="255" id="product-image" value="@product.Image" required>
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-md-12">
                <label>Product Price</label>
                <input type="text" name="price" class="form-control" id="product-price" value="@product.Price.ToString("N2")" required>
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-md-12">
                <label>Product Description</label>
                <textarea type="text" name="description" class="form-control" rows="6" id="product-description">@product.Description</textarea>
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-md-4">
                <input class="btn btn-primary btn-lg btn-block" type="submit" value="Update Product" />
            </div>
        </div>
    </form>
</div>
