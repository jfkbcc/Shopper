@{
    ViewData["Title"] = "Login";
    string errMsg = ViewData["ErrorMsg"].ToString();
}

<div class="text-center">
    <h1 class="display-4">Login Page</h1>
</div>

@if (errMsg != null && errMsg.Length > 0) {
<div class="alert alert-danger mt-4 mb-4" role="alert">
    An error was encountered: <strong>@errMsg</strong>
</div>
}

<div class="w-100">
    <div class="row">
        <div class="col-md-6">
            <h4 class="mb-3">Login</h4>

            <form method="post" action="/Login/Authenticate" enctype="application/x-www-form-urlencoded">
                <div class="row mb-3">
                    <div class="col-md-12">
                        <label>Email Address</label>
                        <input type="text" name="email" class="form-control" maxlength="70" id="email-address" required>
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-4">
                        <input class="btn btn-primary btn-lg btn-block" type="submit" value="Login" />
                    </div>
                </div>
            </form>
        </div>
        <div class="col-md-6">
            <h4 class="mb-3">Register</h4>
            <form method="post" action="/Login/Register" enctype="application/x-www-form-urlencoded">
                <div class="row mb-3">
                    <div class="col-md-12">
                        <label>Email Address</label>
                        <input type="text" name="email" class="form-control" maxlength="70" id="email-address" required>
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-12">
                        <label>Full Name</label>
                        <input type="text" name="name" class="form-control" maxlength="70" id="fullname" autocomplete="given-name" required>
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-4">
                        <input class="btn btn-primary btn-lg btn-block" type="submit" value="Register" />
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
